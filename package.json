{
  "name": "zv-copy-utilities",
  "displayName": "zv-copy-utilities",
  "description": "Add quick commands to copy to clipboard.",
  "publisher": "zveillette",
  "repository": {
    "url": "https://github.com/zveillette/vscode-copy-utility"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zv-copy-utilities.copyFileName",
        "title": "File name",
        "category": "Copy Utilities",
        "enablement": "config.zv-copy-utilities.copyFileName != 'Hidden'"
      },
      {
        "command": "zv-copy-utilities.copyParentDir",
        "title": "Directory",
        "category": "Copy Utilities",
        "enablement": "config.zv-copy-utilities.copyParentDir != 'Hidden'"
      }
    ],
    "menus": {
      "explorer/context": [{
        "submenu": "zv-copy-utilities.copyUtilities"
      }],
      "zv-copy-utilities.copyUtilities":[{
        "command": "zv-copy-utilities.copyFileName",
        "when": "config.zv-copy-utilities.copyFileName != 'Hidden'"
      }]
    },
    "submenus": [{
      "id": "zv-copy-utilities.copyUtilities",
      "label": "Copy Utilities"
    }],
    "configuration": {
      "title": "Copy Utilities",
      "properties": {
        "zv-copy-utilities.copyFileName": {
          "type": "string",
          "default": "File name",
          "enum": ["Hidden", "File name", "File name & extension"]
        },
        "zv-copy-utilities.copyParentDir": {
          "type": "string",
          "default": "Parent directory",
          "enum": ["Hidden", "Parent directory"]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}
